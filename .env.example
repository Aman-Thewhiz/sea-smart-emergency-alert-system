# Flask
FLASK_DEBUG=0
PORT=5000
LOG_LEVEL=INFO
LOG_FILE=
DEMO_MODE=true

# Email (required for alert delivery)
SMTP_HOST=smtp.yourhost.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASS=your_password
EMERGENCY_EMAIL_FROM=alerts@yourdomain.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+12025550123

# Phone normalization
DEFAULT_COUNTRY=IN

# Rate limiting
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX=5
